{
  "name": "devcon",
  "version": "1.0.0",
  "description": "Social network app as built in Traversy Media's MERN Stack Udemy course",
  "main": "server.js",
  "scripts": {
    "client-install": "cd client && yarn",
    "start": "node server.js",
    "server": "nodemon server.js",
    "client": "cd client && yarn start",
    "dev": "concurrently \"yarn start server\" \"cd client && yarn start\"",
    "build": "webpack --mode production ./project/client/src/index.js --output ./project/client/static/client/main.js"
  },
  "author": "Brett Sullivan",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.18.3",
    "concurrently": "^4.1.0",
    "express": "^4.16.4",
    "gravatar": "^1.8.0",
    "jsonwebtoken": "^8.4.0",
    "mongoose": "^5.4.1",
    "node-gyp": "^3.8.0",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "validator": "^10.10.0"
  },
  "devDependencies": {
    "nodemon": "^1.18.9"
  },
  "engines": {
    "node": "10.15.1",
    "yarn": "1.9.4"
  }
}
